{
  "name": "health-check-dashboard",
  "version": "1.0.0",
  "description": "Service Health Check Dashboard - Web and Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "npm run build:frontend && npm run build:backend",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm install --omit=dev --omit=optional --ignore-scripts && npm rebuild sqlite3",
    "package": "npm run prebuild && electron-builder",
    "package:all": "npm run prebuild && electron-builder -mwl",
    "package:win": "npm run prebuild && electron-builder --win",
    "package:mac": "npm run prebuild && electron-builder --mac",
    "package:linux": "npm run prebuild && electron-builder --linux"
  },
  "build": {
    "appId": "com.healthcheck.dashboard",
    "productName": "Health Check Dashboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "backend/**/*",
      "!backend/data/**/*",
      "!backend/node_modules/**/test/**",
      "!backend/node_modules/**/tests/**",
      "!backend/node_modules/**/*.md",
      "!backend/node_modules/**/*.ts",
      "!backend/node_modules/**/*.map",
      "!backend/node_modules/**/LICENSE",
      "!backend/node_modules/**/README",
      "!backend/node_modules/**/CHANGELOG*",
      "!backend/node_modules/**/.github/**",
      "!backend/node_modules/**/docs/**",
      "!backend/node_modules/**/examples/**"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!data/**/*",
          "!node_modules/**/test/**",
          "!node_modules/**/tests/**",
          "!node_modules/**/*.md",
          "!node_modules/**/*.ts",
          "!node_modules/**/*.map",
          "!node_modules/**/LICENSE",
          "!node_modules/**/README",
          "!node_modules/**/CHANGELOG*",
          "!node_modules/**/.github/**",
          "!node_modules/**/docs/**",
          "!node_modules/**/examples/**",
          "!node_modules/swagger-ui-dist/**",
          "!node_modules/swagger-jsdoc/**",
          "!node_modules/swagger-ui-express/**",
          "!node_modules/node-gyp/**",
          "!node_modules/**/gyp/**",
          "!node_modules/**/build/config.gypi",
          "!node_modules/**/deps/**"
        ]
      }
    ],
    "asarUnpack": [
      "backend/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Development"
    }
  },
  "keywords": ["health-check", "monitoring", "dashboard", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
